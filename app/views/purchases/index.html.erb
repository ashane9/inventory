<p id="notice"><%= notice %></p>

<h1>Purchases</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Invoice Number</th>
      <th scope="col">Purchase Type</th>
      <th scope="col">Location</th>
      <th scope="col">Date</th>
      <th scope="col">Source</th>
      <th scope="col">Sale Price</th>
      <th scope="col">Buyer Premium</th>
      <th scope="col">Shipping</th>
      <th scope="col">Total Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr scope="row">
        <td><%= purchase.invoice_number %></td>
        <td><%= PurchaseType.where(id: purchase.purchase_type.id).first.type_name %></td>
        <td><%= purchase.location %></td>
        <td><%= purchase.date %></td>
        <td><%= purchase.sale_price %></td>
        <td><%= purchase.buyer_premium %></td>
        <td><%= purchase.shipping %></td>
        <td><%= purchase.total_cost %></td>
        <td><%= link_to 'Show', purchase %></td>
        <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
        <td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

