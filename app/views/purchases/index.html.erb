<p id="notice"><%= notice %></p>

<h1>Purchases</h1>

<table>
  <thead>
    <tr>
      <th>Invoice number</th>
      <th>Purchase type</th>
      <th>Location</th>
      <th>Date</th>
      <th>Source</th>
      <th>Sale price</th>
      <th>Buyer premium</th>
      <th>Shipping</th>
      <th>Total cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.invoice_number %></td>
        <td><%= purchase.purchase_type %></td>
        <td><%= purchase.location %></td>
        <td><%= purchase.date %></td>
        <td><%= purchase.sale_price %></td>
        <td><%= purchase.buyer_premium %></td>
        <td><%= purchase.shipping %></td>
        <td><%= purchase.total_cost %></td>
        <td><%= link_to 'Show', purchase %></td>
        <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
        <td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

