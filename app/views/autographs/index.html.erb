<div class="container-fluid h-100">
  <h1 class="text-center display-4 align-items-center pt-1">Autographs</h1>

  <br>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Item</th>        
        <th scope="col">Item Type</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @autographs.each_with_index do |autograph, i| %>
        <tr scope="row">
          <td><%= i+1 %>: </td>
          <td><%= link_to autograph.name, autograph %></td>
          <td>
            <% @item = Item.where(id: autograph.item_id, owned_by: user).first %>
            <%= @item.item_name %>
          </td>
          <td>
            <%= ItemType.where(id: @item.item_type_id).first.type_name %>
          </td>
          <td>
            <%= link_to edit_autograph_path(autograph) do %>
              <i class="fas fa-edit fa-1x"></i>
            <% end %>
          </td>
          <td>
            <%= link_to autograph, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>