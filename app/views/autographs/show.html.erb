<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @autograph.name %>
</p>

<p>
  <% AuthenticationsAutograph.where(autograph_id: @autograph.id).each do |authentication|%>
    <strong>Authentication:</strong>
    <%= Authentication.where(id: authentication.authentication_id).name %>
    <p>
    <strong>Authentication number:</strong>
    <%= authentication.authentication_number %>
    </p>
  <% end %>
</p>




