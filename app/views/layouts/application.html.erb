<!DOCTYPE html>
<html>
  <head>
    <title>Inventory</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to "Andrew's Collectibles", root_path, {class: "navbar-brand"}%>
    
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to "Search", root_path, {class: "nav-link"}%>
          </li>
          <li class="nav-item">   
            <%= link_to "Add New Item", new_item_path, {class: "nav-link"}%>
          </li>
          <li class="nav-item">   
            <%= link_to "Add New Autograph", home_new_autograph_path, {class: "nav-link"}%>
          </li>
          <li class="nav-item">   
            <%= link_to "Item List", items_path, {class: "nav-link"}%>
          </li>
        </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
