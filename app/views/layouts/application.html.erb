<!DOCTYPE html>
<html class="h-100">
  <head>
    <title>Inventory</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag '//ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/le-frog/jquery-ui.min.css' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
     </head>

  <body class="h-100 bg-light">

    
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        
          <%= link_to header_name, root_path, {class: "navbar-brand"}%>
          <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navMenu" aria-expanded="false" aria-controls="navMenu">
            <span class="navbar-toggler-icon"></span>                   
          </button>      
      
        <div class="collapse navbar-collapse my-lg-2" id="navMenu">
          <ul class="nav navbar-nav">
            <li class="nav-item">
              <%= link_to "Search", root_path, {class: "nav-link"}%>
            </li>
            <li class="nav-item">   
              <%= link_to "Add New Item", new_item_path, {class: "nav-link"}%>
            </li>
            <li class="nav-item">   
              <%= link_to "Add New Autograph", home_new_autograph_path, {class: "nav-link"}%>
            </li>
            <li class="nav-item">   
              <%= link_to "Item List", items_path, {class: "nav-link"}%>
            </li>
            <li class="nav-item">   
              <%= link_to "Autograph List", autographs_path, {class: "nav-link"}%>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                Manage
              </a>
              <div class="dropdown-menu bg-dark" aria-labelledby="navbarDropdown">
                <%= link_to "Item Types", item_types_path, {class: "dropdown-item nav-link ml-2"}%>
                <%= link_to "Authentications", authentications_path, {class: "dropdown-item nav-link ml-2"}%>
                <%= link_to "Purchase Types", purchase_types_path, {class: "dropdown-item nav-link ml-2"}%>
                <%= link_to "Purchases", purchases_path, {class: "dropdown-item nav-link ml-2"}%>
                <%= link_to "Values", values_path, {class: "dropdown-item nav-link ml-2"}%>                
                <% if session_active? %>
                  <%= link_to "User", '/dashboard', {class: "dropdown-item nav-link ml-2"}%>
                <% end %>
              </div>
            </li>
            <% if session_active? %>
              <li class="nav-item">
                <%= link_to 'Logout', '/auth/logout', {method: :get, class: "nav-link"} %>
              </li>
            <% end %>
          </ul>
        </div>
    </nav>

    <%= yield %>
  </body>
</html>
