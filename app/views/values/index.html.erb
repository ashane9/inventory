 <div class="container-fluid h-100">
  <h1 class="text-center display-4 align-items-center pt-1">Values</h1>

  <br>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Piece</th>
        <th scope="col">Estimated value</th>
        <th scope="col">As of date</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @values.each_with_index do |value,i| %>
        <tr scope="row">  
          <td class="px-1">
            <div class="row">
              <span class="col-1">
                <%= i+1 %>: 
              </span>
              <span class="col px-0">
                <%= link_to get_value_name(value), value %>
              </span>
            </div>
          </td>
          <td><%= number_to_currency(value.estimated_value) %></td>
          <td><%= value.as_of_date.strftime('%b %d %Y') unless value.as_of_date.nil? %></td>
          <td>
            <div class="row">          
              <%= link_to edit_value_path(value), class: 'col-6 py-1' do %>
                <i class="fas fa-edit fa-1x"></i>
              <% end %>
              <%= link_to value, method: :delete, data: { confirm: "Do you want to delete purchase for #{get_value_name(value)}?" }, class: 'col-6 py-1' do %>
                <i class="fas fa-trash-alt"></i>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>