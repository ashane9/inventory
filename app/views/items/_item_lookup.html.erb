<div class="field form-group">
  <label class="control-label">Lookup Item</label>
  <input type="search" id="item-search" placeholder="Search for item..." autocomplete="off" class= "form-control" >
</div>

<!-- display none, need to show when item exists -->
<div id="item-search-result" style="">
  <div class="row">
    <strong class="col">Item Name:</strong>
    <div id="result-name" class="col">
      <% if item %>
        <%= item.item_name %>
      <% end %>
    </div>
  </div>
  <br>
  <div class="row">
    <strong class="col">Item Description:</strong>
    <div id="result-desc" class="col">
      <% if item %>
        <%= item.description %>
      <% end %>
    </div>
  </div>
</div>
